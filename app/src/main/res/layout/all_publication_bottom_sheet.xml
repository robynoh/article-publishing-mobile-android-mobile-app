<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gray_btn_bg">



        <LinearLayout
            android:id="@+id/mypubli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

             >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight="0">
                <Button
                    android:id="@+id/publicationclose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#0000"
                    android:fontFamily="sans-serif-medium"

                    android:drawableStart="@drawable/ic_baseline_close_24"

                    android:textColor="#000" />  <!-- Right most ImageView -->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/textView2erty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Support"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"

                android:padding="20dp"
                android:layout_weight="0"
                />








            <!-- Right most ImageView -->
            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/supporttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=" Dissertation1 allows your dissertations, thesis, articles, and blogs to be published at a low reasonable price. It's another avenue for a scholarly resource. In addition, it's a great gateway for younger children to become aware and see their writing potentials in print. So let's get started. "
            android:textColor="@color/black"
            android:textSize="14sp"
            android:padding="20dp"
            android:layout_weight="0"
            />






    </LinearLayout>

</LinearLayout>