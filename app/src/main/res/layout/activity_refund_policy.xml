<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".refund_policy">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".new_publication"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:background="@null"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                tools:layout_editor_absoluteX="1dp"
                app:titleTextColor="#000"
                tools:layout_editor_absoluteY="18dp" >



                <!-- Right most ImageView -->


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/textView2hgt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Refund Policy"
            android:fontFamily="sans-serif-medium"

            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"

           />

        <TextView
            android:id="@+id/textView2iou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-medium"

            android:text="Thank you for shopping at Dissertation1! We offer refunds within the first 30 days of your purchase, if 30 days have passed since your purchase, you will not be offered a refund and/or exchange of any kind. "
            android:textSize="14sp"


            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"

            android:paddingBottom="10dp"

             />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-medium"

            android:text="If your submission is not accepted due to profanity or abusive language, you will be able to receive an 85% refund with a 15% processing fee charge."
            android:textSize="14sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"

            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-medium"

            android:text="Please contact chamber7inc@gmail.com regarding Support Services for additional information. Thank you."
            android:textSize="14sp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:textColor="@color/green"

            />



    </LinearLayout>


</LinearLayout>