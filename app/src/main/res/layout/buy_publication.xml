<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/white_btn_bg">



    <LinearLayout
        android:id="@+id/mypubli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="0">
               <!-- Right most ImageView -->
            <Button
                android:id="@+id/buyclose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#0000"
                android:fontFamily="sans-serif-medium"

                android:drawableStart="@drawable/ic_baseline_close_24"

                android:textColor="#000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Right most ImageView -->
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/testdetailw"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/header_bg"
            android:orientation="vertical"
            android:padding="10dp"
            >



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                   <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">





                       <TextView
                           android:id="@+id/textView2yut"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginEnd="10dp"
                           android:text="Buying this publication will afford you the access to read and download the pdf format."
                           android:textSize="13sp"
                           android:fontFamily="sans-serif-medium"

                           android:paddingTop="5dp"
                           />

                       <androidx.appcompat.widget.AppCompatButton
                           android:id="@+id/refundPolicy"
                           android:layout_width="170dp"
                           android:layout_height="45dp"
                           android:background="@null"
                           android:text="Refund policy"
                           android:textColor="@color/black"
                           android:textAllCaps="false"
                           android:gravity="left"
                           android:textSize="14dp"
                           android:textStyle="bold"
                           android:layout_marginTop="5dp"


                           />
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <LinearLayout
                               android:layout_width="140dp"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView

                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginEnd="10dp"
                                   android:text="Price"
                                   android:textColor="#ff00"
                                   android:textSize="10sp"
                                   android:paddingTop="5dp"
                                   android:fontFamily="sans-serif-medium"
                                   />
                           <TextView

                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginEnd="10dp"
                               android:text="1 credit"
                               android:textSize="25sp"
                               android:paddingTop="5dp"
                               android:fontFamily="sans-serif-medium"
                               android:textColor="@color/black"
                               />

                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="200dp"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">

                           <androidx.appcompat.widget.AppCompatButton
                               android:id="@+id/buynow"
                               android:layout_width="170dp"
                               android:layout_height="45dp"
                               android:background="@drawable/d1_profile_btn"
                               android:text="Buy Now"
                               android:textColor="@color/white"
                               android:textAllCaps="false"
                               android:gravity="center"
                               android:textSize="14dp"
                               android:layout_marginTop="5dp"
                               android:layout_marginRight="15dp"

                               />
                           </LinearLayout>
                       </LinearLayout>


                       <TextView
                           android:id="@+id/textView2iou"
                           android:layout_width="wrap_content"
                           android:layout_height="50dp"
                           android:layout_marginTop="15dp"

                           android:fontFamily="sans-serif-medium"




                           android:text="Credits in Dissertation1 app enable you to buy articles and upload your article"
                           android:textSize="14sp"


                           />


                </LinearLayout>



            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>