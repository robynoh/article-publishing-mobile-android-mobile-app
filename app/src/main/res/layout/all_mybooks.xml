<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/header_bg"
    android:orientation="horizontal"
    android:padding="5dp"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/article_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="10dp"
                android:text="Cointegration relationship between Food Production and Carbon Emission"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="GETING RELATIONSHIP BETWEEN TWO"
                android:textSize="11sp"
                android:paddingLeft="10dp"
                android:fontFamily="sans-serif-medium"

                android:paddingTop="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                        <TextView
                        android:id="@+id/author"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="Author: Dr. Linderall Gregory"
                        android:textSize="11sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:fontFamily="sans-serif-medium"

                        />

                    <Button
                        android:id="@+id/openBottom"
                        android:layout_width="120dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:background="#0000"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left|center_vertical"
                        android:drawableStart="@drawable/menudots"
                        android:paddingLeft="20dp"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="Live"
                        android:textSize="14sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:textColor="#090"
                        android:visibility="gone"
                        android:fontFamily="sans-serif-medium"

                        />


                </LinearLayout>
