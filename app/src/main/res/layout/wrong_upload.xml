<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="40dp"
    android:background="#ffff"
    >

    <ImageView
        android:id="@+id/emailiconx"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:padding="2dp"
        android:gravity="center"
        android:background="@drawable/warning"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="This PDF file is not in your phone's Internal storage."

        android:textColor="@color/black"
        android:textSize="15sp"

        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textTitle"
        android:gravity="left"
        android:text="Ensure that the PDF file is inside the download folder in your phone's internal storage."
        android:textColor="@color/green"
        android:textSize="15sp"

        android:paddingTop="10dp"/>





    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delivered"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/d1_profile_btn"
        android:text="okay"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:gravity="center"
        android:textSize="14dp"


        android:layout_gravity="center"/>




</LinearLayout>