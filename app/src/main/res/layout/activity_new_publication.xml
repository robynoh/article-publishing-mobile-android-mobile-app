<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EEEFF1"
    android:scrollbars="none"
    tools:context=".new_publication">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_publication"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:background="@null"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            tools:layout_editor_absoluteX="1dp"
            app:titleTextColor="#000"
            tools:layout_editor_absoluteY="18dp" >


            <TextView
                android:id="@+id/textView2erty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="New Publication"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
            <!-- Right most ImageView -->


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Title"
                android:textSize="14sp"
                android:paddingRight="14sp"


                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/header_bg"
            android:orientation="horizontal"
            android:padding="15dp">

            <EditText
                android:id="@+id/title"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/header_bg"
                android:hint="Title of publication"
                android:inputType="text"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Co-Authors (Separate with comma)"
                android:textSize="14sp"
                android:paddingRight="14sp"


                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/header_bg"
            android:orientation="horizontal"
            android:padding="15dp">

            <EditText
                android:id="@+id/coauthor"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/header_bg"
                android:hint="Co-authors"
                android:inputType="text"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:text="Choose category of article"
                android:textSize="14sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/toolbar"
                app:layout_constraintTop_toTopOf="parent" />


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:backgroundTint="@color/black"
                />
        </LinearLayout>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView2hgtm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Intro. of your publication"
                android:textSize="14sp"
                android:paddingRight="14sp"


                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/header_bg"
            android:orientation="horizontal"
            android:padding="15dp">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_bg"
                android:orientation="vertical"
                android:padding="15dp">

<androidx.core.widget.NestedScrollView

    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@null"
    >


    <EditText

        android:id="@+id/pabstract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="your abstract"
        android:background="@null"
        android:maxLines="512"/>

</androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Upload PDF file of publication"
                android:textSize="14sp"
                android:paddingRight="14sp"


                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/header_bg"
            android:orientation="horizontal"

            >

            <ImageButton
                android:id="@+id/choose_file"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:scaleType="centerInside"
                android:background="@null"
                app:srcCompat="@drawable/upload" />




            <TextView
                android:id="@+id/filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="File name"
                android:padding="15sp"
                android:gravity="center"
                android:paddingRight="14sp"


                android:textColor="@color/black"
                />
        </LinearLayout>






        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/errorMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textSize="12sp"
                    android:paddingRight="14sp"
                    android:textColor="#ff0000"
                    />

        <Button
            android:id="@+id/uploadArticle"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="UPLOAD"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:background="@drawable/d1_profile_btn"
            />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/refundPolicy"
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:text="Refund policy"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"

                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

        <ProgressBar
            android:id="@+id/idLoadingPB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:visibility="gone" />
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>