<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".create_account">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:background="@null"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            tools:layout_editor_absoluteX="1dp"
            app:titleTextColor="#000"
            tools:layout_editor_absoluteY="18dp" >



            <!-- Right most ImageView -->


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp"
        >

        <LinearLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout

                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/textView2hgt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="Hi!"
                        android:fontFamily="sans-serif-medium"

                        android:textColor="@color/black"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/toolbar"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
<!--                    <ProgressBar-->
<!--                        android:id="@+id/idLoadingPB"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:visibility="gone" />-->
                </LinearLayout>


                   </LinearLayout>
            <TextView
                android:id="@+id/textView2iou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-medium"

                android:text="Create a new account"
                android:textSize="16sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/toolbar"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gray_btn_bg"
            android:orientation="horizontal"
            android:padding="15dp">

            <EditText
                android:id="@+id/firstname"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gray_btn_bg"
                android:hint="Firstname"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gray_btn_bg"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/lastname"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gray_btn_bg"
                android:hint="Lastname"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gray_btn_bg"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/place_of_work"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gray_btn_bg"
                android:hint="Place of work"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gray_btn_bg"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/position"
                android:layout_width="308dp"
                android:layout_height="23dp"
                android:layout_weight="1"
                android:background="@drawable/gray_btn_bg"
                android:hint="Position"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-medium"

                android:text="Choose your title"
                android:textSize="13sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/toolbar"
                app:layout_constraintTop_toTopOf="parent" />


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:backgroundTint="@color/black"
                />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gray_btn_bg"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/email"
                android:layout_width="308dp"
                android:layout_height="23dp"
                android:layout_weight="1"
                android:background="@drawable/gray_btn_bg"
                android:hint="Your email"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gray_btn_bg"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/password"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gray_btn_bg"
                android:hint="Password"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gray_btn_bg"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/cpassword"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gray_btn_bg"
                android:hint="Comfirm Password"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textSize="14sp" />
        </LinearLayout>









        <Button
            android:id="@+id/submit_account"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="SIGN UP"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@drawable/d1_profile_btn"
            />



        <LinearLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:text="Already have an account?"
                android:textSize="14sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/toolbar"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/gotosignup"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Login"
                android:textColor="#B6FA72"
                android:fontFamily="sans-serif-medium"
                android:background="@null"
                android:textSize="14sp"
                />
            <ProgressBar
                android:id="@+id/idLoadingPB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>